<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp150"
        app:srcCompat="@mipmap/hulk_network_error" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:text="@string/network_error"
        android:textColor="@color/m484848"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:text="@string/network_error_please_refresh"
        android:textColor="@color/mA2A2A2"
        android:textSize="@dimen/sp14" />

    <com.madreain.hulk.view.HulkStatusButton
        android:id="@+id/pager_error_loadingAgain"
        android:layout_width="@dimen/dp136"
        android:layout_height="@dimen/dp36"
        android:layout_marginTop="@dimen/dp40"
        android:layout_marginBottom="@dimen/dp20"
        android:text="@string/refresh"
        app:sbColorStyle="grayGreenLight" />

</LinearLayout>